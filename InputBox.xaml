<Window x:Class="SecureAppVault.InputBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="InputBox" Height="150" Width="300">
    <Grid>
        <TextBlock Name="PromptTextBlock" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="10"/>
        <TextBox Name="InputTextBox" HorizontalAlignment="Center" VerticalAlignment="Center" Width="200" KeyDown="InputTextBox_KeyDown" />
        <Button Content="OK" HorizontalAlignment="Center" VerticalAlignment="Bottom" Click="OkButton_Click" />
    </Grid>
</Window>